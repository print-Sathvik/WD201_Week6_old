<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./css/styles.css" rel="stylesheet">
    <title>To-Do Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function updateTodo(id)
        {
            let checkStatus = document.getElementById(`todo-checkbox-${id}`).checked
            fetch(`/todos/${id}`, {
                method: "put",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({completed: checkStatus})
            })
            .then((res) => {
                if(res.ok) {
                    window.location.reload();
                }
            })
            .catch((err) => console.error(err));
        }

        function deleteTodo(id)
        {
            fetch(`/todos/${id}`, {
                method: "delete",
                headers: {"Content-Type": "application/json"}
            })
            .then((res) => {
                if(res.ok) {
                    window.location.reload();
                }
            })
            .catch((err) => console.error(err));
        }
    </script>

</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <form action="/todos" method="post">
                <div class="flex gap-2 py-4">
                    <div class="flex-auto">
                        <input type="text" name="title" placeholder="What's next?" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" required/>
                    </div>
                    <div class="flex-auto">
                        <input type="date" name="dueDate" required class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm leading-4" />
                    </div>
                    <div class="flex-none">
                        <button type="submit" class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2">Add</button>
                    </div>
                </div>
            </form>
            <div>
                <%- include('todos.ejs') %>
            </div>
        </div>
    </div>
</body>
</html>